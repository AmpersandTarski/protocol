<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<abc:PresentationTokenDescription
  xmlns:abc="http://abc4trust.eu/wp2/abcschemav1.0"
  PolicyUID="http://example.com/pp/hotelbooking.xml"
  TokenUID="abc4trust.eu/token-uid/1234567890">
  <abc:Message>
    <abc:Nonce>SGVsbG9Xb3JsZAo=</abc:Nonce>
    <abc:ApplicationData>
      <RoomType>Double</RoomType>
      <ArrivalDate>2012-04-01</ArrivalDate>
      <NrOfNights>2</NrOfNights>
      <ReservationCode>HCJ095</ReservationCode>
      I agree to the terms of service and cancellation policy.
    </abc:ApplicationData>
  </abc:Message>
  <abc:Credential Alias="#passport">
      <abc:CredentialSpecUID>http://example.com/cs/passport.xml
      </abc:CredentialSpecUID>
      <abc:IssuerParametersUID>http://example.com/isk/passport.xml
      </abc:IssuerParametersUID>
  </abc:Credential>
  <abc:Credential Alias="#cc">
      <abc:CredentialSpecUID>http://example.com/cs/cc.xml
      </abc:CredentialSpecUID>
      <abc:IssuerParametersUID>http://example.com/isk/cc.xml
      </abc:IssuerParametersUID>
      <abc:DisclosedAttribute AttributeType="Status"
           DataHandlingPolicy="http://example.com/dhp/cc-status">
        <abc:AttributeValue>Gold</abc:AttributeValue>
      </abc:DisclosedAttribute>
      <abc:DisclosedAttribute AttributeType="Number"
           DataHandlingPolicy="http://example.com/dhp/cc-number">
        <abc:InspectorPublicKeyUID>http://bank.example.com/ink/payment.xml
        </abc:InspectorPublicKeyUID>
        <abc:InspectionGrounds>Payment</abc:InspectionGrounds>
      </abc:DisclosedAttribute>
  </abc:Credential>
  <abc:AttributePredicate
       Function="urn:oasis:names:tc:xacml:1.0:function:string-equal">
    <abc:Attribute CredentialAlias="#passport" AttributeType="Fullname" />
    <abc:Attribute CredentialAlias="#cc" AttributeType="Name" />
  </abc:AttributePredicate>
  <abc:AttributePredicate
       Function="urn:oasis:names:tc:xacml:1.0:function:date-less-than">
    <abc:Attribute CredentialAlias="#passport" AttributeType="DOB" />
    <abc:ConstantValue>1995-05-31</abc:ConstantValue>
  </abc:AttributePredicate>
</abc:PresentationTokenDescription>
